# Frontend Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code (excluding vite.config.ts to avoid conflicts)
COPY package*.json ./
COPY src/ ./src/
COPY public/ ./public/
COPY index.html ./
COPY tsconfig*.json ./
COPY jest.config.json ./
COPY vite.config.docker.ts ./

# Use Docker-specific Vite config as the main config
RUN cp vite.config.docker.ts vite.config.ts

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
