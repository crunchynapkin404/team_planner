# Team Planner - Production Environment Variables Template
# Copy this file to .env.production and fill in actual values

# Django Core Settings
DJANGO_SECRET_KEY=your-secret-key-here-minimum-50-characters-long-and-random
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_ADMIN_URL=your-custom-admin-url/

# Security Settings
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True

# Database Configuration (PostgreSQL)
DATABASE_NAME=team_planner
DATABASE_USER=team_planner_user
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Celery Configuration (if using async tasks)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Application Settings
CONN_MAX_AGE=60

# Generate SECRET_KEY with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
